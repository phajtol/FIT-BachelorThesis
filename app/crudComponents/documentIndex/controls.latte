{ifset $deleteAllowed}
	<button type="button" data-signal-url="{$deleteLink}" class="btn btn-danger {ifset $button}btn-{$button}{else}btn-xs{/ifset} deleteDocumentIndexButton deleteButton{$uniqid}" data-toggle="modal" data-target="#DeleteModal{$uniqid}" title="Delete document index">
		<span class="glyphicon glyphicon-remove"></span>
		{if isset($description) && $description == true} Delete{/if}
	</button>
{/ifset}
{ifset $editAllowed}
	<button type="button" data-signal-url="{$editLink}" class="btn btn-primary {ifset $button}btn-{$button}{else}btn-xs{/ifset} editDocumentIndexButton editButton{$uniqid}" data-toggle="modal" data-target="#EditModal{$uniqid}" title="Edit document index">
		<span class="glyphicon glyphicon-pencil"></span>
		{if isset($description) && $description == true} Edit{/if}
	</button>
{/ifset}