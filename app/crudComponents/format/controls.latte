{ifset $deleteAllowed}
	<button type="button" data-signal-url="{$deleteLink}" class="btn btn-danger btn-xs deleteFormatButton deleteButton{$uniqid}" data-toggle="modal" data-target="#DeleteModal{$uniqid}" title="Delete format">
		<span class="glyphicon glyphicon-remove"></span>
	</button>
{/ifset}
{ifset $editAllowed}
	<button type="button" data-signal-url="{$editLink}" class="btn btn-primary btn-xs editFormatButton editButton{$uniqid}" data-toggle="modal" data-target="#EditModal{$uniqid}" title="Edit format">
		<span class="glyphicon glyphicon-pencil"></span>
	</button>
{/ifset}